<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back5"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/relative1"
    tools:context="com.example.admin.supplyit_customer.LoginActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:background="@drawable/logo"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed1"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_marginLeft="18dp"
        android:hint="email"
        android:background="@android:color/transparent"
        android:layout_above="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignRight="@+id/ed2"
        android:layout_alignEnd="@+id/ed2"
        android:layout_alignTop="@+id/imageView" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/lock"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/imageView2"


        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:background="@drawable/ic_person_white_24dp"
        android:id="@+id/imageView"
        android:layout_marginLeft="18dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/ed2"
        android:maxLength="20"
        android:hint="password"
        android:textColorHint="#ffffff"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ed1"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/imageView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/b2"
        android:background="@drawable/border2"
        android:text="Log in"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignRight="@+id/ed2"
        android:layout_alignEnd="@+id/ed2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/b1"
        android:layout_marginTop="5dp"
        android:text="Sign up"
        android:textColor="#ffffff"
        android:background="@drawable/border"
        android:layout_below="@+id/b2"
        android:layout_alignRight="@+id/b2"
        android:layout_alignEnd="@+id/b2"
        android:layout_alignLeft="@+id/b2"
        android:layout_alignStart="@+id/b2" />

    <Button
        style="@style/AlertDialog.AppCompat.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forgot password ?"
        android:textSize="17dp"
        android:textColor="#fff"
        android:fontFamily="@string/abc_search_hint"
        android:id="@+id/button"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/ed2"
        android:layout_alignRight="@+id/SplitLine_hor1"
        android:layout_alignEnd="@+id/SplitLine_hor1" />


    <View
        android:id="@+id/SplitLine_hor1"
        android:layout_width="wrap_content"
        android:layout_height= "1dp"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/b2"
        android:layout_alignStart="@+id/b2"
        android:layout_below="@+id/ed1"
        android:layout_alignRight="@+id/b2"
        android:layout_alignEnd="@+id/b2" />
</RelativeLayout>
